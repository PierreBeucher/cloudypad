#!/usr/bin/env bash

#
# Get password for the cloudypad user
#

# Check if running as root or as cloudypad user
CLOUDY_PASSWORD_DIR="${XDG_DATA_HOME}/cloudypad/sudo"
CLOUDY_PASSWORD_FILE="${CLOUDY_PASSWORD_DIR}/password"

if [[ -f "${CLOUDY_PASSWORD_FILE}" ]]; then
    cat "${CLOUDY_PASSWORD_FILE}"
else
    echo "ERROR: Password file not found." >&2
    exit 1
fi